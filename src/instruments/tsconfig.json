{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2017",
    "module": "ES2017",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "strict": false,
    "declaration": false,
    "declarationMap": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": [
      "./types/**/"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}