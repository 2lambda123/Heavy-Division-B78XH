{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2015",
    "module": "ES2015",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "allowJs": true,
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "build",
    "rootDir": ".",
    "baseUrl": ".",
    "typeRoots": [
      "./types/**"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": ["../../**/*"]
}